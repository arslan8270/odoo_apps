<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="snippet_testimonial_opt" name="Snippet Testimonial Options"
    inherit_id="website.snippet_options">
    <xpath expr="//div[@data-js='Box']" position="after">
      <div data-js="testimonial_pack2_slider"  data-selector=".testimonial_pack2"> <!-- Options group -->
        <div class="dropdown-divider"></div>
        <li class="dropdown-submenu">
            <a class="dropdown-item" tabindex="-2" href="#"><i class="fa fa-clock-o"/>Display items</a>
            <div class="dropdown-menu" role="menu">
              <a class="dropdown-item" data-item-show="1" data-no-preview="false" href="#">1</a>
              <a class="dropdown-item" data-item-show="2" href="#">2</a>
              <a class="dropdown-item" data-item-show="3" href="#">3</a>
            </div>
        </li>
        <li class="dropdown-submenu">
          <a class="dropdown-item" tabindex="-2" href="#"><i class="fa fa-clock-o"/>Auto play</a>
          <div class="dropdown-menu" role="menu">
            <a class="dropdown-item" data-autoplay="true" href="#">On</a>
            <a class="dropdown-item" data-autoplay="false" href="#">Off</a>
          </div>
        </li>
        <li class="dropdown-submenu">
          <a class="dropdown-item" tabindex="-1" href="#"><i class="fa fa-clock-o"/>Slideshow speed</a>
          <div class="dropdown-menu" role="menu">
            <a class="dropdown-item" data-slidespeed="1000" href="#">1s</a>
            <a class="dropdown-item" data-slidespeed="2000" href="#">2s</a>
            <a class="dropdown-item" data-slidespeed="3000" href="#">3s</a>
            <a class="dropdown-item" data-slidespeed="5000" href="#">5s</a>
            <a class="dropdown-item" data-slidespeed="10000" href="#">10s</a>
          </div>
        </li>
        <li class="dropdown-submenu">
          <a class="dropdown-item" data-add-slide="true" data-no-preview="true" href="#">
            <i class="fa fa-plus-circle"/>Add Slide</a>
        </li>
        <li class="dropdown-submenu">
          <a class="dropdown-item" data-remove-slide="true" data-no-preview="true" href="#">
            <i class="fa fa-trash-o"/>Remove Slide</a>
        </li>
      </div>
    </xpath>

  </template>
</odoo>
